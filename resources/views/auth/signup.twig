          $('#password').siblings('.help-block').html('');
      }else {
          $('#password').css('border-bottom','1px solid rgba(255, 255, 255, 0.2)');
          $('#password').siblings('.help-block').html(data);
      }
      });
  });

  $('#password_confirm').keyup(function(){
    var val = $('#password_confirm').val();
    var type = 'password_confirm';
    var password = $('#password').val();
    $.get("{{path_for('validate')}}",{type:type, val: val, password:password}, function(data){
      if(data == 'true'){
          $('#password_confirm').css('border-bottom','1px solid green');
          $('#password_confirm').siblings('.help-block').html('');
      }else {
          $('#password_confirm').css('border-bottom','1px solid rgba(255, 255, 255, 0.2)');
