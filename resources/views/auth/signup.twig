<script>

  $(document).ready(function(){
  $('#username').keyup(function(){
    var val = $('#username').val();
    var type = 'username';
    $.get("{{path_for('validate')}}",{type:type, val: val}, function(data){
      if(data == 'true'){
          $('#username').css('border-bottom','1px solid green');
          $('#username').siblings('.help-block').html('');
      }else {
          $('#username').css('border-bottom','1px solid rgba(255, 255, 255, 0.2)');
          $('#username').siblings('.help-block').html(data);
      }
      });
  });
  $('#email').keyup(function(){
    var val = $('#email').val();
